<header>
  <nav class="navbar grey darken-4" role="navigation">
    <a href="#" data-activates="slide-out" class="button-collapse"><i class="fa fa-bars" aria-hidden="true"></i></a>
    <div class="nav-wrapper container">
      <img class="emblem responsive-img" src="images/szczebrzeszyn-emblem.png" alt="szczebrzeszyn-emblem">
      <a id="logo-container" href="/" class="brand-logo">Jakub Cebrykow</a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li><a href="/followerspage">Poparło mnie już:<span class="badge indigo white-text">{{#foreach}} {{counter}}{{/foreach}}</span></a></li>
        <li><a href="/">Główna</a></li>
        <li><a href="/contact">Kontakt</a></li>
        {{#if user.name}}
        {{else}}
          <li><a href="/login">Zaloguj</a></li>
        {{/if}}
      </ul>
    </div>
  </nav>
</header>
<!-- Side-Nav -->
<ul id="slide-out" class="side-nav right">
  <li>
    <div class="user-view">
      <li><a href="/followerspage">Poparło mnie już:<span class="badge indigo white-text">{{counter}}</span></a></li>
      <li>
        <div class="divider"></div>
      </li>
      {{#if user}}
        {{#if user.picture}}
          <span> <a href="#!user"><img class="avatar responsive-img circle" src="{{user.picture}}"></a></span>
        {{else}}

          <a href="#!user"><img class="avatar responsive-img circle" src="{{user.gravatar}}"></a>
        {{/if}}
        {{#if user.name}}
          <li><a href="#!name"><span class="black-text name">Zalogowany jako: {{user.name}}</span></a></li>
        {{else}}
          <a href="#!email"><span class="black-text email">{{user.email}}</span></a>
        {{/if}}

        <li>
          <div class="divider"></div>
        </li>
        <li><a href="/account"><i class="fa fa-user" aria-hidden="true"></i>Moje konto</a></li>
        <li><a href="/logout"><i class="fa fa-sign-out" aria-hidden="true"></i>Wyloguj</a></li>
      {{else}}
        <li><a href="/login"><i class="fa fa-sign-in" aria-hidden="true"></i>Zaloguj</a></li>
        <li><a href="/signup"><i class="fa fa-user-plus" aria-hidden="true"></i>Rejestracja</a></li>
      {{/if}}
    </div>
  </li>
  <li><a href="#!"><i class="fa fa-envelope-o" aria-hidden="true"></i>Kontakt</a></li>
  <li>
    <div class="divider"></div>
  </li>
</ul>

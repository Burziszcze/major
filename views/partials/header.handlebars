<header>
  <nav class="navbar grey darken-4" role="navigation">
    <a href="#" data-activates="slide-out" class="button-collapse"><i class="fa fa-bars" aria-hidden="true"></i></a>
    <div class="nav-wrapper container">
      <img class="emblem responsive-img" src="images/szczebrzeszyn-emblem.png" alt="szczebrzeszyn-emblem">
      <a id="logo-container" href="/" class="brand-logo">Jakub Cebrykow</a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li><a href="/followerspage">{{translation.FOLLOWERS}}<span class="badge indigo white-text">
          {{votes}} {{translation.PERSONS}}
        </span></a></li>

        <li><a href="/">{{translation.MAINSITE}}</a></li>
        <li><a href="/contact">{{translation.CONTACT}}</a></li>
        {{#if user.name}}
          <li><a href="/logout">{{translations.LOGOUT}}</a></li>
        {{else}}
          <li><a href="/login">{{translation.SIGNUP}}</a></li>
        {{/if}}
        <!-- Dropdown Trigger -->
        <li><a class="dropdown-button" href="#!" data-activates="dropdown1">{{translation.LANGUAGE}}<i class="material-icons right">language</i></a></li>
      </ul>
    </div>
  </nav>
  <!-- Dropdown Structure -->
  <ul id="dropdown1" class="dropdown-content">
    <li><a href="/?clang=en">English</a></li>
    <li class="divider"></li>
    <li><a href="/?clang=pl">Polski</a></li>
  </ul>
</header>
<!-- Side-Nav -->
<ul id="slide-out" class="side-nav right">
  <li>
    <div class="user-view">
      <li><a href="/followerspage">{{translation.FOLLOWERS}}<span class="badge indigo white-text">{{votes}} {{translation.PERSONS}}</span></a></li>
      <li>
        <div class="divider"></div>
      </li>
      {{#if user}}
        {{#if user.picture}}
          <span> <a href="#!user"><img class="avatar responsive-img circle" src="{{user.picture}}"></a></span>
        {{else}}

          <a href="#!user"><img class="avatar responsive-img circle" src="{{user.gravatar}}"></a>
        {{/if}}
        {{#if user.name}}
          <li><a href="#!name"><span class="black-text name">{{translation.LOGGEDBY}} {{user.name}}</span></a></li>
        {{else}}
          <a href="#!email"><span class="black-text email">{{user.email}}</span></a>
        {{/if}}

        <li>
          <div class="divider"></div>
        </li>
        <li><a href="/account"><i class="fa fa-user" aria-hidden="true"></i>{{translation.ACCOUNT}}</a></li>
        <li><a href="/logout"><i class="fa fa-sign-out" aria-hidden="true"></i>{{translation.LOGOUT}}</a></li>
      {{else}}
        <li><a href="/login"><i class="fa fa-sign-in" aria-hidden="true"></i>{{translation.LOGIN}}</a></li>
        <li><a href="/signup"><i class="fa fa-user-plus" aria-hidden="true"></i>{{translation.SIGNUP}}</a></li>
      {{/if}}
    </div>
  </li>
  <li><a href="#!"><i class="fa fa-envelope-o" aria-hidden="true"></i>{{translation.CONTACT}}</a></li>
  <li>
    <div class="divider"></div>
  </li>
  <li><a href="/?clang=en">English</a></li>
  <li><a href="/?clang=pl">Polski</a></li>
</ul>
